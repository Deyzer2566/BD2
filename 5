SELECT ГРУППА as Группа, CAST(AVG(DATE_PART('year',AGE(НАЧАЛО,ДАТА_РОЖДЕНИЯ))) as int) AS Средний_возраст FROM Н_УЧЕНИКИ
	INNER JOIN Н_ЛЮДИ ON Н_ЛЮДИ.ИД=Н_УЧЕНИКИ.ЧЛВК_ИД GROUP BY ГРУППА
	HAVING CAST(AVG(DATE_PART('year',AGE(НАЧАЛО,ДАТА_РОЖДЕНИЯ))) as int) =
	(SELECT MIN(DATE_PART('year',AGE(НАЧАЛО,ДАТА_РОЖДЕНИЯ))) FROM
		Н_УЧЕНИКИ INNER JOIN Н_ЛЮДИ ON Н_УЧЕНИКИ.ЧЛВК_ИД = Н_ЛЮДИ.ИД
		WHERE ГРУППА = '3100' AND НАЧАЛО > ДАТА_РОЖДЕНИЯ
	);
